<h2><%=@restaurant.name%></h2>
<p><%=@restaurant.address%></p>
<p><%=@restaurant.category%></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>

<p> <%= link_to 'Back to restaurants', restaurants_path,  class: "btn btn-primary" %> </p>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant),  class: "btn btn-primary"%>
